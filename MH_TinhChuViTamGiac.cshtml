@using WebApplication9
@{
    string chuoi = string.Empty;
    string DiemA = string.Empty;
    string DiemB = string.Empty;
    string DiemC = string.Empty;
    if (IsPost)
    {
        Diem A, B, C;
        DiemA = Request["DiemA"];
        DiemB = Request["DiemB"];
        DiemC = Request["DiemC"];
        A = XL_Diem.KhoiTao(DiemA);
        B = XL_Diem.KhoiTao(DiemB);
        C = XL_Diem.KhoiTao(DiemC);
        TamGiac t = XL_TamGiac.KhoiTao(A, B, C);
        double kq = XL_TamGiac.TinhChuVi(t);
        chuoi = $"Chu vi tam giác là {kq}";
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <form action="~/MH_TinhChuViTamGiac.cshtml" method="post">
            Nhập điểm A: <br />
            <input type="text" name="DiemA" value="@DiemA" placeholder="1,2"/><br />
            Nhập điểm B: <br />
            <input type="text" name="DiemB" value="@DiemB" placeholder="3,4"/><br />
            Nhập điểm C: <br />
            <input type="text" name="DiemC" value="@DiemC" placeholder="5,6"/><br />
            <input type="submit" value="Submit" />
        </form>
        @Html.Raw(chuoi)
    </div>
</body>
</html>
