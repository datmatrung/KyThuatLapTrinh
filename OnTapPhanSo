@{
    string chuoi = string.Empty;
    if (IsPost)
    {
        PhanSo[] A = XL_PhanSo.KhoiTaoMang(Request["dsPhanSo"]);
        PhanSo kq = XL_PhanSo.TinhTongMang(A);
        chuoi = XL_PhanSo.Xuat(kq);
    }
}
