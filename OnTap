@using WebApplication15
@{
    if (IsPost)
    {
        SanPham sp;
        sp.MaSP = 0;
        sp.TenSP = Request["TenSP"];
        sp.Gia = int.Parse(Request["Gia"]);
        XL_SanPham.ThemSanPham(sp);
    }
    List<SanPham> dsSanPham = XL_SanPham.DocDanhSach();
}

