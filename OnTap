@using WebApplication15
@{
    string tuKhoa = string.Empty;
    if (IsPost)
    {
        tuKhoa = Request["tuKhoa"];
    }
    List<SanPham> dsSanPham = XL_SanPham.DocDanhSach(tuKhoa);
}

